<%= component_fields_for @record do |f| %>
  <div class="label">
    <%= f.label field %>
    <div class="field_error">
      <%= @record.errors[field.name.to_sym].first %>
    </div>
  </div>
  <div class="image">
    <%= image_tag @record.send(field.name.to_sym).send(field.options[:image][:style]).url %>
  </div>
<% end %>
